<?xml version="1.0" encoding="UTF-8"?>
<component>
	<code>entando-app-view-addressbook-default</code>
	<description>APP view: Address Book default</description>
	<artifact>
		<artifactId>${project.artifactId}</artifactId>
		<groupId>${project.groupId}</groupId>
		<version>${project.version}</version>
	</artifact>
	<dependencies>
		<code>entando-portal-ui</code>
		<code>jpaddressbook</code>
	</dependencies>
	<installation>
		<environment code="production">
			<defaultSqlResources>
				<datasource name="portDataSource">
classpath:sql/bundles/entando-app-view-addressbook-default/port_data_production.sql
				</datasource>
				<datasource name="servDataSource">
classpath:sql/bundles/entando-app-view-addressbook-default/serv_data_production.sql
				</datasource>
			</defaultSqlResources>
		</environment>
	</installation>
	<uninstallation>
		<sqlResources>
			<datasource name="portDataSource">
classpath:sql/bundles/entando-app-view-addressbook-default/port_uninstallation.sql
			</datasource>
			<datasource name="servDataSource">
classpath:sql/bundles/entando-app-view-addressbook-default/serv_uninstallation.sql
			</datasource>
		</sqlResources>
		<resources>
			<resource>WEB-INF/plugins/jpaddressbook/aps/</resource>
		</resources>
	</uninstallation>
</component>
