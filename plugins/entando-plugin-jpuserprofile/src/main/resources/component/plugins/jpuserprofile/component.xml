<?xml version="1.0" encoding="UTF-8"?>
<component>
	<code>jpuserprofile</code>
	<description>Manage User Profile</description>
	<artifact>
		<artifactId>${project.artifactId}</artifactId>
		<groupId>${project.groupId}</groupId>
		<version>${project.version}</version>
	</artifact>
	<installation>
		<environment code="production">
			<defaultSqlResources>
				<datasource name="portDataSource">
classpath:sql/plugins/jpuserprofile/port_data_production.sql
				</datasource>
				<datasource name="servDataSource">
classpath:sql/plugins/jpuserprofile/serv_data_production.sql
				</datasource>
			</defaultSqlResources>
		</environment>
		<environment code="test">
			<defaultSqlResources>
				<datasource name="portDataSource">
classpath:sql/plugins/jpuserprofile/port_data_test.sql
				</datasource>
				<datasource name="servDataSource">
classpath:sql/plugins/jpuserprofile/serv_data_test.sql
				</datasource>
			</defaultSqlResources>
		</environment>
	</installation>
	<uninstallation>
		<sqlResources>
			<datasource name="portDataSource">
classpath:sql/plugins/jpuserprofile/port_uninstallation.sql
			</datasource>
			<datasource name="servDataSource">
classpath:sql/plugins/jpuserprofile/serv_uninstallation.sql
			</datasource>
		</sqlResources>
		<resources>
			<resource>WEB-INF/plugins/jpuserprofile/</resource>
			<resource>WEB-INF/lib/${project.artifactId}-${project.version}.jar</resource>
		</resources>
	</uninstallation>
</component>
