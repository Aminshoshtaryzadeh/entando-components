<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<package name="jpsharedocs_do/jpsharedocs/Config" namespace="/do/jpsharedocs/Config"
		extends="entando-default">

		<action name="edit" class="jpsharedocsConfigAction" method="edit">
			<result type="tiles">admin.jpsharedocs.Config.entry</result>
			<interceptor-ref name="entandoDefaultStack">
				<param name="requestAuth.requiredPermission">superuser</param>
			</interceptor-ref>
		</action>

		<action name="save" class="jpsharedocsConfigAction" method="save">
			<result name="input" type="tiles">admin.jpsharedocs.Config.entry</result>
			<result type="tiles">admin.jpsharedocs.Config.savedConfirmation</result>
			<interceptor-ref name="entandoValidationStack">
				<param name="requestAuth.requiredPermission">superuser</param>
			</interceptor-ref>
		</action>

	</package>

</struts>