<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	
	<bean id="jpsharedocsDocumentActionHelper" class="org.entando.entando.plugins.jpsharedocs.aps.internalservlet.sharedocs.helper.DocumentActionHelper" >
		<property name="categoryManager" ref="CategoryManager" />
		<property name="groupManager" ref="GroupManager"/>
		<property name="resourceManager" ref="jacmsResourceManager" />
		<property name="authorizationManager" ref="AuthorizationManager" />
		<property name="sharedocsManager" ref="jpsharedocsSharedocsManager"/>
	</bean>
	
	<bean id="jpsharedocsEditDocumentAction" scope="prototype" 
			class="org.entando.entando.plugins.jpsharedocs.aps.internalservlet.sharedocs.EditDocumentAction" parent="abstractBaseAction" >
		<property name="contentManager" ref="jacmsContentManager" />
		<property name="categoryManager" ref="CategoryManager" />
		<property name="groupManager" ref="GroupManager"/>
		<property name="resourceManager" ref="jacmsResourceManager" />
		<property name="docHelper" ref="jpsharedocsDocumentActionHelper"/>
		<property name="pageManager" ref="PageManager"/>
		<property name="urlManager" ref="URLManager"/>
		<property name="sharedocsManager" ref="jpsharedocsSharedocsManager"/>
	</bean>
	
	<bean id="jpsharedocsDocumentCommentAction" scope="prototype" 
			class="org.entando.entando.plugins.jpsharedocs.aps.internalservlet.sharedocs.DocumentCommentAction" parent="abstractBaseAction" >
		<property name="contentManager" ref="jacmsContentManager" />
		<property name="docHelper" ref="jpsharedocsDocumentActionHelper"/>
	</bean>
	
</beans>