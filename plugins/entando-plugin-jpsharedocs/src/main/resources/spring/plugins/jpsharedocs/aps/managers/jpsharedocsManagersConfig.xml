<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	
	<bean id="jpsharedocsCheckinManager" class="org.entando.entando.plugins.jpsharedocs.aps.system.services.checkin.ContentCheckinManager"
			parent="abstractService" destroy-method="release" >
		<property name="contentCheckinDAO" >
			<bean class="org.entando.entando.plugins.jpsharedocs.aps.system.services.checkin.ContentCheckinDAO">
				<property name="dataSource" ref="portDataSource" />
			</bean>
		</property>
	</bean>
	
	<bean id="jpsharedocsAttributeRolesLoader" class="com.agiletec.aps.system.common.entity.ExtraAttributeRoles">
		<property name="entityManagerDest" ref="jacmsContentManager" />
		<property name="defsFilePath"><value>/WEB-INF/plugins/jpsharedocs/jpsharedocsAttributeRoles.xml</value></property>
	</bean>
	
	<bean id="jpsharedocsSharedocsManager" 
			class="org.entando.entando.plugins.jpsharedocs.aps.system.services.sharedocs.SharedocsManager"
			parent="abstractService" destroy-method="release" >
		<property name="configManager" ref="BaseConfigManager"/>
	</bean>
	
</beans>