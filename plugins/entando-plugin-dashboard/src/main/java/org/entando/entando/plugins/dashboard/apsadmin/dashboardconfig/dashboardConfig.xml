<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	
    <package name="dashboard_do/dashboard/DashboardConfig" namespace="/do/dashboard/DashboardConfig" extends="entando-default">
    	
    	<action name="list" class="dashboardDashboardConfigFinderAction">
            <result type="tiles">dashboard.admin.DashboardConfig.list</result>
        	<interceptor-ref name="entandoDefaultStack">
        		<param name="chain.includeParameters">fieldErrors,actionErrors,actionMessages</param>
        		<param name="requestAuth.requiredPermission">superuser</param>
        	</interceptor-ref>
        </action>
        
        <action name="search" class="dashboardDashboardConfigFinderAction">
            <result type="tiles">dashboard.admin.DashboardConfig.list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
        <action name="new" class="dashboardDashboardConfigAction" method="newDashboardConfig">
            <result type="tiles">dashboard.admin.DashboardConfig.entry</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
    	<action name="edit" class="dashboardDashboardConfigAction" method="edit">
            <result type="tiles">dashboard.admin.DashboardConfig.entry</result>
            <result name="input" type="redirectAction">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="save" class="dashboardDashboardConfigAction" method="save">
        	<result name="input" type="tiles">dashboard.admin.DashboardConfig.entry</result>
        	<result type="redirectAction">list</result>
        	<interceptor-ref name="entandoValidationStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="trash" class="dashboardDashboardConfigAction" method="trash">
            <result type="tiles">dashboard.admin.DashboardConfig.trash</result>
        	<result name="input" type="redirectAction">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="delete" class="dashboardDashboardConfigAction" method="delete">
        	<result type="redirectAction">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
    </package>
   
</struts>