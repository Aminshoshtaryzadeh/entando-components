<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <bean id="dashboardDashboardConfigDAO"
          class="org.entando.entando.plugins.dashboard.aps.system.services.dashboardconfig.DashboardConfigDAO">
        <property name="dataSource" ref="servDataSource"/>
    </bean>

    <bean id="dashboardDashboardConfigManager"
          class="org.entando.entando.plugins.dashboard.aps.system.services.dashboardconfig.DashboardConfigManager"
          parent="abstractService">
        <property name="keyGeneratorManager" ref="KeyGeneratorManager"/>
        <property name="dashboardConfigDAO" ref="dashboardDashboardConfigDAO"/>
    </bean>

    <bean id="dashboardDashboardConfigService"
          class="org.entando.entando.plugins.dashboard.aps.system.services.dashboardconfig.DashboardConfigService" parent="abstractService">
        <property name="dashboardConfigManager" ref="dashboardDashboardConfigManager"/>
    </bean>


</beans>
